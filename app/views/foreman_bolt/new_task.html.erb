<%= title _('Run Bolt Task') %>
<%= webpacked_plugins_js_for :foreman_bolt %>
<%= webpacked_plugins_css_for :foreman_bolt %>

<%= react_component(
  'NewTask',
  {
    smartProxies:    @smart_proxies.map { |p| { id: p.id, name: p.name } },
    urls: {
      tasks:  foreman_bolt.fetch_tasks_path,
      reload: foreman_bolt.reload_tasks_path,
      opts:   foreman_bolt.fetch_bolt_options_path
    },
    i18n: {
      selectProxy:            _('Select a Smart Proxy first'),
      loadingTasks:           _('Loading tasks...'),
      noTasks:                _('No tasks available'),
      selectTask:             _('Select a task'),
      loadingParams:          _('Loading task parameters...'),
      loadingOptions:         _('Loading Bolt options...'),
      selectProxyForOptions:  _('Select a Smart Proxy to see Bolt options'),
      selectProxyAndTask:     _('Select a Smart Proxy and task to see parameters')
    }
  }
) %>
